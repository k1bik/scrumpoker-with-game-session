<% if @password.errors[:old_password].empty? %>
  <%= turbo_stream.update :old_password %>
<% end %>

<% if @password.old_password.present? && @password.errors[:old_password].present? %>
  <%= turbo_stream.update :old_password do %>
   <%= @password.errors[:old_password].join(", ") %>
  <% end %>
<% end %>

