<% if @view_object.errors[:name].empty? %>
  <%= turbo_stream.update :name %>
<% end %>

<% if @view_object.name.present? && @view_object.errors[:name].present? %>
  <%= turbo_stream.update :name do %>
   <%= @view_object.errors[:name].join(", ") %>
  <% end %>
<% end %>

