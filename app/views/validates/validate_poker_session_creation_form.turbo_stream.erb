<% if @view_model.errors[:name].empty? %>
  <%= turbo_stream.update :name_error %>
<% end %>

<% if @view_model.name.present? && @view_model.errors[:name].present? %>
  <%= turbo_stream.update :name_error do %>
   <%= @view_model.errors[:name].join(", ") %>
  <% end %>
<% end %>

