<div class="w-full h-full bg-gradient-to-r from-gray-800 to-gray-600">
  <div class="w-[386px] rounded-3xl py-8 px-4 bg-white mx-auto mt-40">
    <div class="relative flex items-center mb-4">
      <div class="flex-grow border-t border-black"></div>
      <span class="flex-shrink mx-4 text-xl"><%= t("login.login") %></span>
      <div class="flex-grow border-t border-black"></div>
    </div>
    <div class="px-4">
      <%= form_with(scope: :session, url: session_path, class: "flex flex-col space-y-5") do |f| %>
        <%= f.text_field :name,
                         class: "rounded-md focus:ring-red-400 focus:border-red-400",
                         placeholder: t("login.name_placeholder"),
                         autocomplete: "off"
        %>
        <%= f.password_field :password,
                             class: "rounded-md focus:ring-red-400 focus:border-red-400",
                             placeholder: t("login.password_placeholder")
        %>
        <%= f.submit t("login.login"),
                    data: {turbo: false},
                    class: "cursor-pointer px-12 py-2 bg-red-400 text-white rounded-lg font-bold hover:bg-red-500 duration-500"
        %>
        <div class="flex space-x-1 mx-auto">
          <span><%= t("login.dont_have_an_account")%></span>
          <%= link_to t("login.create_now"), new_user_path, class: "text-red-400 underline hover:text-red-500 duration-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
