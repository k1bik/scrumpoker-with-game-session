<div class="flex items-center justify-center h-full bg-gradient-to-r from-gray-800 to-gray-600">
  <div class="w-[800px] rounded-3xl py-8 px-4 bg-white shadow-xl border border-black">
    <div class="px-4">
      <%= form_with scope: :poker_session,
                    url: poker_sessions_path,
                    class: "flex flex-col" do |f|
      %>
      <div class="flex w-full gap-5">
        <div class="w-full">
          <%= render LabelComponent.new(required: true).with_content("Session name") %>
          <%= render TextInputComponent.new(
            error_container_id: "name",
            name: "poker_session[name]",
            value: @view_model.name,
            errors: @view_model.errors.full_messages_for(:name)
          )%>
        </div>
        <div class="w-full">
          <%= render LabelComponent.new(required: true).with_content("Password") %>
          <%= render PasswordInputComponent.new(
            id: "password_input",
            error_container_id: "password",
            name: "poker_session[password]",
            errors: @view_model.errors.full_messages_for(:password)
          )%>
        </div>
      </div>
      <%= render LabelComponent.new(required: true).with_content("Estimates") %>
      <%= render TextInputComponent.new(
        error_container_id: "estimates",
        name: "poker_session[estimates]",
        value: @view_model.estimates,
        errors: @view_model.errors.full_messages_for(:estimates)
      )%>
        <%= f.submit "Create",
                    data: {turbo: false},
                    class: "cursor-pointer px-12 py-2 bg-black text-white rounded-lg font-bold hover:bg-red-500 duration-500"
        %>
      <% end %>
    </div>
  </div>
</div>
